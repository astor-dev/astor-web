{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*", "src/env.d.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./",
    "paths": {
      "~features/*": ["src/features/*"],
      "~common/*": ["src/common/*"],
      "~pages/*": ["src/pages/*"],
      "~content/*": ["src/content/*"],
      "~modules/*": ["src/modules/*"],
      "~assets/*": ["src/assets/*"],
      "~/*": ["src/*"]
    }
  }
}
