---
import ProjectDetail from "~layouts/projects/ProjectDetail.astro";
import { repositoryContainer } from "~modules/repository.module";
import { PROJECT_REPOSITORY, type ProjectRepository } from "~modules/repositories/projects/ProjectRepository";

export async function getStaticPaths() {
  const projectRepository = repositoryContainer.get<ProjectRepository>(PROJECT_REPOSITORY);
  const projects = await projectRepository.getProjects({sort: {field: "endedAt", order: "desc"}});

  const postResult = projects.items.map(project => ({
    params: { id: project.id },
    props: { project, latestProjects: projects.items.slice(0, 8) },
  }));

  return postResult;
}

const { project, latestProjects } = Astro.props;
---

<ProjectDetail project={project} isAdmin={false} latestProjects={latestProjects} />
