---
export interface CertificationDetail {
  name: string;
  issuer: string;
  issuedAt: string;
  expiresAt?: string;
  score?: {
    score: number;
    maxScore: number;
  };
}

interface Props {
  certification: CertificationDetail;
}

const { certification } = Astro.props;
const periodText = certification.expiresAt
  ? `${certification.issuedAt} - ${certification.expiresAt}`
  : certification.issuedAt;
---

<div>
  <div class="space-y-4">
    <div class="space-y-4 sm:col-span-1">
      <div>
        <h4 class="text-xs text-black-base">
          {certification.issuer}
        </h4>
        <h3 class="text-sm font-bold text-black-accent">
          {certification.name}
        </h3>
        <p class="text-xs text-black-base/60">Issued at {periodText}</p>
      </div>
    </div>
  </div>
</div>
