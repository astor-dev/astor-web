---
import { formatDate } from "~common/utils/date.utils";

export interface CertificationDetail {
  name: string;
  issuer: string;
  issuedAt: string;
  expiresAt?: string;
  score?: {
    score: number;
    maxScore: number;
  };
}

interface Props {
  certification: CertificationDetail;
}

const { certification } = Astro.props;

const periodText = certification.expiresAt
  ? `${formatDate(certification.issuedAt)} - ${formatDate(certification.expiresAt)}`
  : formatDate(certification.issuedAt);
---

<div>
  <div class="space-y-4">
    <div class="space-y-4 sm:col-span-1">
      <div>
        <h4 class="text-xs text-black-base">
          {certification.issuer}
        </h4>
        <h3 class="text-sm font-bold text-black-accent">
          {certification.name}
        </h3>
        <p class="text-xs text-black-base/60">Issued {periodText}</p>
      </div>
    </div>
  </div>
</div>
