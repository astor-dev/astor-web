---
import logo from "~assets/svgs/favicon.png";
const {
  title,
  image,
  description = "astor의 개발 및 기술 관련 블로그입니다.",
  url = "https://astor-dev.com",
  favicon = logo.src,
  keywords = "Astro, 블로그, 개발, 웹",
  type = "website",
  publishedTime,
  modifiedTime,
  author = "Astor",
} = Astro.props;

// 현재 URL 생성
const siteUrl = url.startsWith("http") ? url : `https://astor-dev.com${url}`;

// 이미지 URL 정규화
const normalizedImage = image?.startsWith("http")
  ? image
  : image
    ? `https://astor-dev.com${image}`
    : "https://astor-dev.com/default-og-image.jpg";

// 블로그 포스트인 경우에만 JSON-LD 구조화 데이터 생성
const isArticle = type === "article";
---

<head>
  <!-- Google Tag Manager -->
  <script is:inline>
    (function (w, d, s, l, i) {
      w[l] = w[l] || [];
      w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
      var f = d.getElementsByTagName(s)[0],
        j = d.createElement(s),
        dl = l != "dataLayer" ? "&l=" + l : "";
      j.async = true;
      j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
      f.parentNode.insertBefore(j, f);
    })(window, document, "script", "dataLayer", "GTM-MFD92VH3");
  </script>
  <!-- End Google Tag Manager -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>
    {title ? title + " | astor-dev" : "astor-dev"}
  </title>
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <link rel="canonical" href={siteUrl} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={favicon} />
  <link rel="apple-touch-icon" href={favicon} />

  <!-- Open Graph (Facebook, LinkedIn) -->
  <meta property="og:type" content={type} />
  <meta property="og:url" content={siteUrl} />
  <meta property="og:title" content={title ? title : "astor-dev"} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={normalizedImage} />
  <meta property="og:site_name" content="astor-dev" />

  {
    isArticle && (
      <>
        <meta property="article:author" content={author} />
        {publishedTime && (
          <meta property="article:published_time" content={publishedTime} />
        )}
        {modifiedTime && (
          <meta property="article:modified_time" content={modifiedTime} />
        )}
      </>
    )
  }

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title ? title : "astor-dev"} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={normalizedImage} />
  {author && <meta name="twitter:creator" content={author} />}

  <!-- 추가적인 SEO 설정 -->
  <meta name="robots" content="index, follow" />
  <meta name="author" content={author} />

  <!-- JSON-LD 구조화 데이터 -->
  {
    isArticle && (
      <script
        type="application/ld+json"
        set:html={JSON.stringify({
          "@context": "https://schema.org",
          "@type": "BlogPosting",
          headline: title,
          image: normalizedImage,
          datePublished: publishedTime,
          dateModified: modifiedTime || publishedTime,
          author: {
            "@type": "Person",
            name: author,
          },
          publisher: {
            "@type": "Organization",
            name: "astor-dev",
            logo: {
              "@type": "ImageObject",
              url: "https://astor-dev.com/logo.png",
            },
          },
          description: description,
          mainEntityOfPage: {
            "@type": "WebPage",
            "@id": siteUrl,
          },
        })}
      />
    )
  }
</head>
